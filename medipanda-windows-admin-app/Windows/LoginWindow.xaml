<Window x:Class="medipanda_windows_admin.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#DDD">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- 타이틀 바 -->
            <Grid Grid.Row="0" Background="White" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Button Content="✕" 
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="40" Height="40"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="20"
                        Foreground="#666"
                        Click="CloseButton_Click"
                        Cursor="Hand"/>
            </Grid>

            <!-- 로그인 내용 -->
            <StackPanel Grid.Row="1" Margin="50,30,50,30" VerticalAlignment="Center">
                <TextBlock Text="medipanda 관리자" FontSize="32" FontWeight="SemiBold" 
                          HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Username TextBox with Placeholder -->
                <Grid Height="45" Margin="0,0,0,15">
                    <TextBox x:Name="UsernameTextBox" 
                            FontSize="14" 
                            Padding="10"
                            VerticalContentAlignment="Center"
                            TextChanged="UsernameTextBox_TextChanged"/>
                    <TextBlock x:Name="UsernamePlaceholder"
                              Text="아이디를 입력하세요"
                              IsHitTestVisible="False"
                              VerticalAlignment="Center"
                              Margin="12,0,0,0"
                              Foreground="#999"
                              FontSize="14"/>
                </Grid>

                <!-- PasswordBox with Placeholder -->
                <Grid Height="45" Margin="0,0,0,20">
                    <PasswordBox x:Name="PasswordBox" 
                                FontSize="14" 
                                Padding="10"
                                VerticalContentAlignment="Center"
                                PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock x:Name="PasswordPlaceholder"
                              Text="비밀번호를 입력하세요"
                              IsHitTestVisible="False"
                              VerticalAlignment="Center"
                              Margin="12,0,0,0"
                              Foreground="#999"
                              FontSize="14"/>
                </Grid>

                <Button x:Name="LoginButton"
                       Content="로그인" 
                       Height="45" 
                       Background="#2C3E50" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold"
                       Click="LoginButton_Click" 
                       Cursor="Hand"
                       IsEnabled="False"/>
            </StackPanel>

            <!-- 버전 정보 (좌하단) -->
            <Grid Grid.Row="2" Background="#F8F9FA">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Margin="15,0,0,0">
                    <TextBlock x:Name="VersionText"
                              Text="v0.0.0" 
                              Foreground="#999"
                              FontSize="11"
                              FontFamily="Segoe UI"
                              VerticalAlignment="Center"/>

                    <!-- 환경 선택 ComboBox -->
                    <ComboBox x:Name="EnvironmentComboBox"
                              Margin="15,0,0,0"
                              Width="70"
                              Height="22"
                              FontSize="10"
                              SelectedIndex="0"
                              SelectionChanged="EnvironmentComboBox_SelectionChanged">
                        <ComboBoxItem Content="운영" Tag="Production"/>
                        <ComboBoxItem Content="개발" Tag="Development"/>
                    </ComboBox>
                </StackPanel>

                <!-- 우하단: 회사 정보 -->
                <TextBlock Text="© 2025 (주)케이앤메디슨" 
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"
                          Foreground="#BBB"
                          FontSize="10"
                          FontFamily="Segoe UI"/>
            </Grid>
        </Grid>
    </Border>
</Window>